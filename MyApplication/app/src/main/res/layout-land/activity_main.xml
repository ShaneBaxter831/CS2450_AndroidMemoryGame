<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classybackground_land"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MusicToggle"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginEnd="36dp"
        android:onClick="musicToggle_function"
        android:text="Music: on"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/toHighScores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.712" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="298dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/mainmenu" />

    <Button
        android:id="@+id/twentyCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/button"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/eighteenCards"
        app:layout_constraintTop_toTopOf="@+id/eighteenCards" />

    <Button
        android:id="@+id/fourteenCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_14"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/fourCards"
        app:layout_constraintTop_toBottomOf="@+id/fourCards" />

    <Button
        android:id="@+id/twelveCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_12"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/tenCards"
        app:layout_constraintTop_toTopOf="@+id/tenCards" />

    <Button
        android:id="@+id/tenCards"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_10"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/eightCards"
        app:layout_constraintTop_toTopOf="@+id/eightCards" />

    <Button
        android:id="@+id/eightCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_8"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sixCards"
        app:layout_constraintTop_toTopOf="@+id/sixCards" />

    <Button
        android:id="@+id/fourCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_4"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/eighteenCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_18"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/sixteenCards"
        app:layout_constraintTop_toTopOf="@+id/sixteenCards" />

    <Button
        android:id="@+id/sixCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_6"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/fourCards"
        app:layout_constraintTop_toTopOf="@+id/fourCards" />

    <Button
        android:id="@+id/sixteenCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/_16"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/fourteenCards"
        app:layout_constraintTop_toTopOf="@+id/fourteenCards" />

    <Button
        android:id="@+id/toHighScores"
        android:layout_width="147dp"
        android:layout_height="62dp"
        android:layout_marginTop="112dp"
        android:text="High Scores"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toEndOf="@+id/twentyCards"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="279dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memorygameteamclassy" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="282dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/playcardsquestion" />

</androidx.constraintlayout.widget.ConstraintLayout>