<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/classybackground"
    >

    <Button
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:text="End Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/card9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <ImageButton
        android:id="@+id/card10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/classycard" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="10dp"
        app:constraint_referenced_ids="card1,card2,card3,card4,card5,card6,card7,card8,card9,card10,card11,card12,card13,card14"
        app:flow_horizontalStyle="spread"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>